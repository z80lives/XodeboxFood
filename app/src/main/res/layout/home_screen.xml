<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/holo_green_dark"
    >
    <!-- Note: The dimensions declared in this file is currently
    overwritten after inflation-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/homescreen_searchbar_layout"
            android:id="@id/search_bar_id"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--first item container-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/home_item_frame"
                >

                <android.support.v4.view.ViewPager
                    android:id="@+id/home_items_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    >

                    <!--android.support.v4.view.PagerTabStrip
                        android:id="@+id/home_item_strip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >

                    </android.support.v4.view.PagerTabStrip-->


                </android.support.v4.view.ViewPager>

            </FrameLayout>

            <!--second item container-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/home_highlight_frame"
                >

                <android.support.v4.view.ViewPager
                    android:id="@+id/news_item_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    >

                    <!--android.support.v4.view.PagerTabStrip
                        android:id="@+id/home_item_strip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >

                    </android.support.v4.view.PagerTabStrip-->


                </android.support.v4.view.ViewPager>

            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>